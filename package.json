{
  "name": "development-environment",
  "version": "0.0.1",
  "description": "an environment for Node/React development",
  "main": "scripts/index.js",
  "scripts": {
    "dev": "run-p watch:* npm http-server -c-1 run-s clean mkdir build:*",
    "clean": "rimraf build",
    "mkdir": "mkdirp build",
    "build:css": "run-s mkdir:css _build:css",
    "clean:css": "rimraf build/styles",
    "mkdir:css": "mkdirp build/styles",
    "_build:css": "node-sass --include-path scss styles/index.scss styles/index.css cpr styles build/styles",
    "watch:css": "run-s build:css _watch:css",
    "_watch:css": "chokidar css/**/* -c \"npm run build:css\"",
    "build:html": "run-s clean:html mkdir:html _build:html",
    "clean:html": "rimraf build/index.html",
    "mkdir:html": "mkdirp build/index.html",
    "_build:html": "cpr index.html build/index.html",
    "watch:html": "run-s build:html _watch:html",
    "_watch:html": "chokidar index.html build/index.html",
    "_build:js": "webpack",
    "clean:js": "rimraf build/scripts",
    "mkdir:js": "mkdirp build/scripts",
    "build:js": "run-s clean:js mkdir:js _build:js",
    "watch:js": "run-s build:js _watch:js",
    "_watch:js": "webpack --watch",
    "mkdir:assets": "run-s mkdir",
    "clean:assets": "rimraf build/assets",
    "build:assets": "run-s clean:assets mkdir:assets _build:assets",
    "_build:assets": "cpr assets build/assets",
    "watch:assets": "run-s build:assets _watch:assets",
    "_watch:assets": "chokidar assets/**/* -c \"npm run build:assets\"",
    "test": "mocha --recursive --compilers js:babel-core/register"
  },
  "keywords": [
    "node",
    "react",
    "redux",
    "mongoose"
  ],
  "author": "R. Wood",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.16.1",
    "express": "^4.14.1",
    "immutability-helper": "^2.1.2",
    "mongoose": "^4.8.5",
    "morgan": "^1.8.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.1.10",
    "babel-preset-react": "^6.23.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "cpr": "^2.0.2",
    "css-loader": "^0.26.2",
    "faker": "^4.1.0",
    "http-server": "^0.9.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "react-addons-test-utils": "^15.4.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.2",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.2",
    "webpack": "^2.2.1"
  }
}
